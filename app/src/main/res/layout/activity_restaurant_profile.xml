<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantProfileActivity"
    android:background="@color/custom_yellow">


    <ImageView
        android:id="@+id/logo_image_view_restaurant_profile_activity"
        android:layout_width="326dp"
        android:layout_height="326dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="46dp"/>



    <TextView
        android:id="@+id/restaurant_name_text_view_restaurant_profile_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/logo_image_view_restaurant_profile_activity"
        android:text="פרטים"
        android:layout_marginTop="24dp"
        android:textColor="@color/custom_blue"
        android:fontFamily="@font/assistant_bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>




    <TextView
        android:id="@+id/details_text_view_restaurant_profile_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/restaurant_name_text_view_restaurant_profile_activity"
        android:text="פרטים"
        android:textColor="@color/custom_blue"
        android:fontFamily="@font/assistant_regular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>




    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back_btn_restaurant_profile_activity"
        android:layout_width="326dp"
        android:layout_height="54dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="חזרה"
        android:gravity="center"
        android:textSize="26sp"
        android:fontFamily="@font/arimo_bold"
        android:textColor="@color/white"
        android:background="@drawable/blue_rounded_custom_btn"/>


</androidx.constraintlayout.widget.ConstraintLayout>