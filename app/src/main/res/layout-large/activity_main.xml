<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/custom_yellow"
    android:orientation="vertical"
    android:gravity="center">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="326dp"
        android:layout_marginLeft="84dp"
        android:layout_marginRight="84dp"
        android:src="@drawable/nishnushim_tablet_logo"/>


    <EditText
        android:id="@+id/user_name_edit_text_main_activity"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="שם משתמש"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_marginTop="64dp"
        android:textColor="@color/custom_blue"
        android:textColorHint="@color/custom_blue"
        android:paddingVertical="16dp"
        android:fontFamily="@font/assistant_regular"/>


    <EditText
        android:id="@+id/password_edit_text_main_activity"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="סיסמא"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/custom_blue"
        android:textColorHint="@color/custom_blue"
        android:paddingVertical="16dp"
        android:fontFamily="@font/assistant_regular"/>




    <Button
        android:id="@+id/log_in_btn_main_activity"
        android:layout_width="196dp"
        android:layout_height="50dp"
        android:background="@drawable/blue_rounded_custom_btn"
        app:backgroundTint="@color/custom_blue"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:text="כניסה"
        android:textColor="@color/white"
        android:fontFamily="@font/assistant_bold"
        android:textSize="22dp"/>

</LinearLayout>